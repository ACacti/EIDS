<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shj.eids.dao.UserMapper">
    <cache
            eviction="FIFO"
            flushInterval="60000"
            size="512"
            readOnly="true"/>
    <select id="getUsers" resultType="User" parameterType="map">
        select * from user
        <where>
            <if test="id != null">
                and id=#{id}
            </if>
            <if test="email!=null">
                and email=#{email}
            </if>
            <if test="password!=null">
                and password=#{password}
            </if>
            <if test="level!=null">
                and level=#{level}
            </if>
            <if test="introduction">
                and introduction=#{introduction}
            </if>
        </where>
        <if test="start!=null and length!=null">
            limit #{start}, #{length}
        </if>
    </select>
    <select id="getPasswordByEmail" resultType="string">
        select password from user where email=#{email}
    </select>
    <insert id="addUser" parameterType="User">
        insert into user(email, password, level, introduction) values (#{email}, #{password}, #{level}, #{introduction})
    </insert>
    <update id="updateUser" parameterType="User">
        update user
        <set>
            <if test="email!=null">
                email=#{email},
            </if>
            <if test="password!= null">
                password=#{password},
            </if>
            <if test="level!=null">
                level=#{level},
            </if>
            <if test="introduction">
                introduction=#{introduction},
            </if>
        </set>
        where id=#{id}
    </update>
    <delete id="deleteUserById" parameterType="int">
        delete from user where id=#{id}
    </delete>
    <delete id="deleteUserByEmail" parameterType="int">
        delete from user where email=#{email}
    </delete>
</mapper>